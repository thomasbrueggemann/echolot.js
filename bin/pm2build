#!/usr/bin/env node

'use strict';

var pm2b = require("../pm2-build");

var args = process.argv;

if(args.length <= 2) {
	throw "not enough arguments: node pm2recursive.js 'startDir'";
}

// get the start directory from parameters
var startDir = args[2];

// run the build tool
pm2b.build(startDir);